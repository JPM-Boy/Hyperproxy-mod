### mapfont
fontfiles = {
    name = "mapfont"
    always_load = yes

    group = {
        languages = { "l_english" "l_braz_por" "l_french" "l_german" "l_polish" "l_russian" "l_spanish" "l_turkish" }
        files = {
            "fonts/Ac437_Acer_VGA_9x8.ttf"
			"fonts/ZenOldMincho/ZenOldMincho-Regular.ttf" # Zen Old Mincho is used for Playfair in Japanese
            "fonts/SB-Aggro/SB-Aggro-M.ttf" # SB-Aggro is used for Playfair in Korean
            "fonts/NotoSerif/NotoSerifSC-Black.otf" # Noto Serif is used for Playfair in Simplified Chinese
            "fonts/NotoSans/NotoSans-Regular.ttf"
        }
    }
    
    group = {
        languages = { "l_japanese" }
        files = {
            "fonts/KleeOne-SemiBold.ttf"
